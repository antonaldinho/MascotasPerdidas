<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id = "@+id/image_detailMascota"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="text_image"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/text_nombreDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/nombre"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_razaDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/raza"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/fecha"
            android:textAlignment="center"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/text_lugarDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/lugar"
            android:textAlignment="center"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/text_mailDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/mail"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/text_telefonoDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/telefono"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/text_FavDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="lol"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/button_favorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_marcar"
            android:layout_gravity="center"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>